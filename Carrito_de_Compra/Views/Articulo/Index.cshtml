@model IEnumerable<CarroCompra1.Models.Articulo>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center"> Articulos</h2>

<p class="text-center">
    @Html.ActionLink("Crear Nuevo", "Create", "Articulo",null, new { @class = "btn btn-primary btn-large" })
</p>
<table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreArticulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMarca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSubCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockMinimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreArticulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca.NombreMarca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubCategoria.NombreSubCategoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockMinimo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    <input type="checkbox" id="IsActive_@item.IdArticulo" @(item.Activo ? "checked" : string.Empty) class="filled-in" disabled />
                    <label for="IsActive_@item.Activo"></label>
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", "Articulo",new { id = item.IdArticulo }, new { @class = "btn btn-primary btn-large" }) 
                    @Html.ActionLink("Detalles", "Detail", "Articulo",new { id = item.IdArticulo }, new { @class = "btn btn-primary btn-large" }) 
                    @Html.ActionLink("Modificar imagen", "Image","Articulo", new { id = item.IdArticulo }, new { @class = "btn btn-primary btn-large" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Back to Dashboard", "Dashboard", "Home")
</div>
<script>


    $('#datatable').dataTable({
        "language": {
            "lengthMenu": "Mostrar _MENU_ registros por página",
            "zeroRecords": "No hay registros para mostrar",
            "info": "Mostrando  _PAGE_ de _PAGES_ registros",
            "infoEmpty": "No hay registros disponibles",
            "infoFiltered": "(Filtrando un total de _MAX_  registros)",
            "loadingRecords": "Cargando...",
            "processing": "Procesando...",
            "search": "Busqueda:",
            "zeroRecords": "No hay registros",
            "paginate": {
                "first": "Primero",
                "last": "Ultimo",
                "next": "Siguiente",
                "previous": "Anterior"
            }
        },
    });
</script> 