@model Carrito_de_Compra.Models.Pedido

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Total</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model.Detalle)
                    {

                        <tr>
                            <td class="col-sm-8 col-md-6">
                                <div class="media">
                                    <a class="thumbnail pull-left" href="#"> <img class="media-object" src="http://icons.iconarchive.com/icons/custom-icon-design/flatastic-2/72/product-icon.png" style="width: 72px; height: 72px;"> </a>
                                    <div class="media-body">
                                        <h4 class="media-heading"><a href="#">@i.Articulo.NombreArticulo</a></h4>
                                        <h5 class="media-heading"> by <a href="#">@i.Articulo.Marca.NombreMarca</a></h5>
                                        <span>Status: </span><span class="text-success"><strong>@i.Pedido.Status.NombreStatus</strong></span>
                                    </div>
                                </div>
                            </td>
                            <td class="col-sm-1 col-md-1" style="text-align: center">
                            </td>
                            <td class="col-sm-1 col-md-1 text-center"><strong>@i.Cantidad</strong></td>
                            <td class="col-sm-1 col-md-1 text-center"><strong>@i.Articulo.Precio</strong></td>
                            <td class="col-sm-1 col-md-1 text-center"><strong>@i.Subtotal</strong></td>
                            <td class="col-sm-1 col-md-1">

                                <a href="@Url.Action("EliminarArticulo", new { id = i.IdArticulo}) " class="btn btn-danger"> <span class="glyphicon glyphicon-remove"></span></a>
                            </td>
                        </tr>
                    }

                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h5>Subtotal</h5></td>
                        <td class="text-right"><h5><strong>@Model.SubTotal</strong></h5></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h5>Impuesto</h5></td>
                        <td class="text-right"><h5><strong>@Model.Impuesto</strong></h5></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h5>Descuento</h5></td>
                        <td class="text-center"><input type="number" class="form-control" id="exampleInputEmail1" value="0"></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h3>Total</h3></td>
                        <td class="text-right"><h3><strong> @Model.Total</strong></h3></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td>
                            <a href="/Articulo/ListaArticulo/" class="btn btn-default">
                                <span class="glyphicon glyphicon-shopping-cart"></span> Continuar comprando
                            </a>
                        </td>
                        <td>
                            <button type="button" class="btn btn-success">
                                Checkout <span class="glyphicon glyphicon-play"></span>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
