@model IEnumerable<Carrito_de_Compra.Models.Sucursal>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Sucursales</h2>

<p class="text-center">
    @Html.ActionLink("Crear nueva", "Create", "Sucursal", null, new { @class = "btn btn-primary btn-large" })
</p>
<div class="container">
    <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreSucursal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreDireccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdCiudad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activo)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreSucursal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreDireccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ciudad.NombreCiudad)
                    </td>
                    <td>
                        <input type="checkbox" id="IsActive_@item.IdSucursal" @(item.Activo ? "checked" : string.Empty) class="filled-in" disabled />
                        <label for="IsActive_@item.Activo"></label>
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", "Sucursal", new { id = item.IdSucursal }, new { @class = "btn btn-primary btn-large" })
                        @Html.ActionLink("Detalle", "Detail", "Sucursal", new { id = item.IdSucursal }, new { @class = "btn btn-primary btn-large" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    @Html.ActionLink("Back to Dashboard", "Dashboard","Home")
</div>
@section Scripts {
    <script>

        $(document).ready(function () {
            $('#datatable').dataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registros por página",
                    "zeroRecords": "No hay registros para mostrar",
                    "info": "Mostrando  _PAGE_ de _PAGES_ registros",
                    "infoEmpty": "No hay registros disponibles",
                    "infoFiltered": "(Filtrando un total de _MAX_  registros)",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Busqueda:",
                    "zeroRecords": "No hay registros",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                },
            });
        });
    </script>
}